<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.Double?>


<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18.0.1">
   <padding>
      <Insets topRightBottomLeft="5." />
   </padding>

   <children>
      <ImageView fitHeight="200.0" preserveRatio="true">
         <image>
            <!-- Absolute path *NOT* permitted -->
            <Image url="@../../../images/javafx.jpg" />
         </image>
      </ImageView>

      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button text="이전" />

            <Button text="닫기">
               <HBox.hgrow><Priority fx:constant="SOMETIMES" /></HBox.hgrow>
               <maxWidth><Double fx:constant="MAX_VALUE" /></maxWidth>
            </Button>
         </children>

         <VBox.margin>
            <Insets top="10." />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
