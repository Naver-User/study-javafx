<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="318.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.zerock.myapp.controller.RootController23">

   <children>
      <StackPane layoutX="14.0" layoutY="14.0" prefHeight="286.0" prefWidth="376.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="287.0" fitWidth="371.0">
               <image><Image url="@../../../media/audio.png" /></image>
            </ImageView>

            <MediaView fx:id="mediaView" fitHeight="287.0" fitWidth="371.0" preserveRatio="false" />
         </children>
      </StackPane>

      <Button fx:id="playBtn" layoutX="406.0" layoutY="14.0" prefHeight="32.0" prefWidth="174.0" text="Play">
         <font><Font name="Lucida Sans Unicode" size="14.0" /></font>
      </Button>

      <Button fx:id="pauseBtn" layoutX="406.0" layoutY="57.0" prefHeight="32.0" prefWidth="174.0" text="Pause">
         <font><Font name="Lucida Sans Unicode" size="14.0" /></font>
      </Button>

      <Button fx:id="stopBtn" layoutX="406.0" layoutY="100.0" prefHeight="32.0" prefWidth="174.0" text="Stop">
         <font><Font name="Lucida Sans Unicode" size="14.0" /></font>
      </Button>

      <Button fx:id="closeBtn" layoutX="406.0" layoutY="143.0" prefHeight="32.0" prefWidth="174.0" text="Close" textFill="RED">
         <font>
            <Font name="Lucida Sans Unicode" size="14.0" />
         </font>
      </Button>
   </children>

</AnchorPane>
